@model List<Pizza>

@if(Model.Count == 0){
    <h4>Non è stata trovata nessuna pizza. Too bad.</h4>
}
else{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="m-3 fw-bold">Lista pizza disponibili</h1>
                    <h6 class="m-4 text-info">Le foto delle pizze vengono randomizzate alla preview because why not omegalul</h6>
                </div>

                <table class="table post-list-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Descrizione</th>
                            <th>Foto</th>
                            <th>Prezzo</th>
                            <th>Azioni</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Pizza element in Model)
                        {
                            <tr>
                                <td>@element.Id</td>
                                <td>@element.Name</td>
                                <td>@element.Description</td>
                                <td><img class="img-fluid img-thumbnail" src="@element.Image" alt="Immagine pizza"></td>
                                <td>@element.Price</td>
                                <td>
                                    <a class="btn btn-success" href="@Url.Action("Details", "Pizza", new { id = @element.Id } )" role="button">Preview</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
}